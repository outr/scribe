<?xml version="1.0" encoding="UTF-8"?>
<Configuration package="log4j.test"
               status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>
    <Appenders>
        <RandomAccessFile name="log4j" fileName="logs/log4j.log" immediateFlush="false" append="false">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </RandomAccessFile>
        <RandomAccessFile name="log4s" fileName="logs/log4s.log" immediateFlush="false" append="false">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </RandomAccessFile>
        <RandomAccessFile name="TraceFile" fileName="logs/log4j-trace.log" immediateFlush="false" append="false">
            <PatternLayout>
                <Pattern>%d{ISO8601}{GMT} %-5p %C{2} (%F:%L) - %m%n</Pattern>
            </PatternLayout>
        </RandomAccessFile>
        <Async name="Async">
            <AppenderRef ref="log4j"/>
        </Async>
    </Appenders>
    <Loggers>
        <Root level="trace">
            <AppenderRef ref="log4j"/>
        </Root>
        <Logger name="Trace" level="trace">
            <AppenderRef ref="TraceFile"/>
        </Logger>
        <Logger name="scala" level="trace">
            <AppenderRef ref="log4s"/>
        </Logger>
    </Loggers>
</Configuration>